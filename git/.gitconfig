[init]
	defaultBranch = main
	templatedir = ~/.git_templates
[user]
	name = Harrison Cramer
	email = harrisoncramer@gmail.com
[includeIf "gitdir:~/crossbeam/"]
	path = /Users/harrisoncramer/.gitconfig-work
[core]
	excludesfile = /Users/harrisoncramer/.gitignore
[merge]
	conflictstyle = diff3
[alias]
  recent = for-each-ref --count 10 --sort=-committerdate refs/heads --format='%(authordate:short) %(color:red)%(objectname:short) %(color:yellow)%(refname:short)%(color:reset) (%(color:green)%(committerdate:relative)%(color:reset))'
  lg = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  reviews = "! ~/bin/git-reviews"
  last = "! ~/bin/git-last"
