#!/bin/bash
set -euo pipefail

npm i -g claude
npm i -g claude-code-acp

claude mcp add --scope user --transport http linear-server https://mcp.linear.app/mcp
claude mcp add --scope user --transport http figma-remote-mcp https://mcp.figma.com/mcp

echo "Run /mcp inside Claude Code to authenticate each server."
