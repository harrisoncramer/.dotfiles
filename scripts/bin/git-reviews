#!/bin/bash

if ! [ -x "$(command -v glab)" ]; then
  echo "glab cli is not installed"
  return
fi

glab mr list --assignee hcramer1 | cat | grep -v 'No open merge' | tail -n3 | awk '{print $NF }' | tr -d '()' | xargs
glab mr list --reviewer hcramer1 | cat | grep -v 'No open merge' | tail -n3 | awk '{print $NF }' | tr -d '()' | xargs
